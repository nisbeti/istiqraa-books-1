<div class="nass margin-top-10"> <p><span id="p1" class="anchor"></span><span class="c5">وكل:</span> وكلنا ١/ ٢٠٠، وكيل ١/ ٢٠٣،<span class="c5"> وكيلا ٢/ ٧٥ ولج:</span> تولج ١/ ٩٠، وليجة ١/ ٢٥٤،<span class="c5"> يلج ٢/ ١٤٢ ولد:</span> بالوالدين ١/ ١٢٦،<span class="c5"> ولدا ٢/ ١٢ ولى:</span> أولى ١/ ١٢، ٢/ ٢٧٨، موليها ١/ ٦٠، فان تولوا ١/ ٩٠، ٩٦، موالى ١/ ١٢٤، مولى ١/ ١٢٤، ٢/ ٢٠٩، ٢١٥، الأوليان ١/ ١٨١ مولاهم ١/ ١٩٤، ولا تولوا ١/ ٢٤٥، ولايتهم ١/ ٢٥١، مولانا ١/ ٢٦٢ الولاية ١/ ٤٠٥، وليا ٢/ ١، الموالي ٢/ ١، المولى ٢/ ٥٤، موليكم ٢/ ١٣٤ فتول ٢/ ٢٢٨،<span class="c5"> مولاكم ٢/ ٢٥٤ وهب:</span> وهبت ٢/ ١٣٩،<span class="c5"> يهب ٢/ ٢٠١ وهج:</span> وهاجا ٢/ ٢٨٢ وهن: ولا تهنوا ١/ ١٠٤، وهن ٢/ ١٢٦، فلا تهنوا ٢/ ٢١٦<a href="#p1" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
