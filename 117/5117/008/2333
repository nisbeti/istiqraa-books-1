<p><span class="anchor" id="p2"></span>السر المصون ١٢٧ <span class="c2">(ط)</span> الدبس: تاريخ سورية ٨: ٧٠٢ ٧٠٤،<span class="c5"> ادورد فنديك:</span> اكتفاء القنوع ١٩:<a href="#p2" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p3"></span>٤٠١ - ٤٠٣،<span class="c5"> طرازي:</span> تاريخ الصحافة ١: ١٤٤ - ١٥٠،<span class="c5"> شيخو:</span> الآداب العربية ٢: ١٥١،<span class="c5"> زيدان:</span> تاريخ آداب اللغة العربية ٤: ٢١٨، ٢١٩، تهاني الدكتور كرنيليوس فنديك،<span class="c5"> البغدادي:</span> هدية العارفين ١: ٨٣٨،<span class="c5"> مارون عبود:</span> رواد النهضة الحديثة ١٧٥،<span class="c5"> زيدان:</span> مشاهير الشرق ٢: ٤٠ - ٥١،<span class="c5"> الزركلي:</span> الاعلام ٦: ٧٧، ٧٨،<span class="c5"> سركيس:</span><a href="#p3" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p4"></span>معجم المطبوعات ١٤٦٢ - ١٤٦٥، أعلام المقتطف ١٧٩ - ١٨٩،<span class="c5"> فهرست الخديوية ٤:</span> ١٩٨،<span class="c5"> ٥:</span> ١٤٦، ٣٩٧، ٣٩٨،<span class="c5"> ٦:</span> ٤، ١٨٠،<span class="c5"> البغدادي:</span> ايضاح المكنون ١: ٦٤، ٩٢، ٩٣، ٢٩٠، ٣٥٣، ٥٩٤،<span class="c5"> ٢:</span> ٤٤٦، ٤٦٢، ٦٧٥،<span class="c5"> المكتبة البلدية:</span> فهرس الكيمياء والطبيعة ٤، ١٣، فهرس الرياضيات ٤، ٢٢، ٢٧، فهرس الجغرافيا ٢٥، ٢٦،<span class="c5"> البغدادي:</span> هدية العارفين ١: ٨٣٨،<span class="c5"> فهرس الازهرية ٦:</span><a href="#p4" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p5"></span>٢٨٧،<span class="c5"> فهرس دار الكتب المصرية ٦:</span> ٦٧،<span class="c5"> احمد عيسى:</span> معجم الاطباء ٣٤٥ - ٣٤٩ <span class="c2">(م)</span> الطبيب ١٠: ٢٦٧،<span class="c5"> ٢٦٨ الكلية ببيروت ٢:</span> ١٨٧،<span class="c5"> ٤:</span> ١٣٩ - ١٤٤، اللطائف سنة ١٨٨٦ م، ص ٥٧ - ٦٣، ١٤١،<span class="c5"> المقتطف ٨:</span> ٦٩٨ - ٧٠٠،<span class="c5"> ١٤:</span> ٣٢٠ ٣٢٣،<span class="c5"> ١٩:</span> ٨٨١ - ٨٨٨،<span class="c5"> ٢٠:</span> ١ - ٥، ٧٩، ٨٠، ٩٧ - ١٠٥، ١٩٦، ١٩٧،<span class="c5"> ٤٢:</span> ٤٨١ - ٤٨٦،<span class="c5"> جورج سمان:</span> منيرفا ٤: ٤٥٥ - ٤٥٧،<span class="c5"> الهلال ٤:</span> ٣ - ٨، ٤١ - ٤٨، ٢٧٧، ٢٧٨، ٣١٩، ٣٢٠، ٤٧٧، ٤٧٨،<span class="c5"> الهلال ٧:</span> ٢٣٣، ٢٣٤، ٣٥٣ - ٣٥٧،<span class="c5"> ١٤:</span> ١٩٥ - ٢٠٥، ٢٧٣ - ٢٨٠<a href="#p5" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
